extends ../layouts/main-layout.pug

block content 
    h2 #{pageSubtitle}
    main
        if orders.length
            for order in orders
                div Order id: #{order.id}
                    ul
                        for product in order.products
                            li
                                p  #{product.title} x #{product.orderItem.quantity}
        else 
            h2 No orders to Display!