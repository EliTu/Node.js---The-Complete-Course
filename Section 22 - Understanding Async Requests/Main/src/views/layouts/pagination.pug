section(class="pagination")
    if hasPreviousPage && currentPage !== 1
        a(class="pagination_arrow" href=`?page=${previousPage}`) <

    if currentPage !== 1 && previousPage !== 1
        a(href="?page=1") 1

    if hasPreviousPage && previousPage !== 1  && previousPage - 1 !== 1
        span ...

    if hasPreviousPage
        a(href=`?page=${previousPage}`) #{previousPage}

    a(href=`?page=${currentPage}` class="active") #{currentPage}

    if hasNextPage
        a(href=`?page=${nextPage}`) #{nextPage}

    if hasNextPage && nextPage !== lastPage && nextPage + 1 !== lastPage
        span ...
    
    if currentPage !== lastPage && nextPage !== lastPage
        a(href=`?page=${lastPage}`) #{lastPage}

    if hasNextPage  && currentPage !== lastPage
        a(class="pagination_arrow" href=`?page=${nextPage}`) >