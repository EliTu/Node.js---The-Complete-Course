{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"*": ["src/node_modules/*"]
		},
		"typeRoots": ["./src/@types", "./node_modules/@types"]
	},
	"include": ["./src/**/*.ts", "./src/@types"],
	"exclude": ["./node_modules"]
}
