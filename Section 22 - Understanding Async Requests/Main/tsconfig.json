{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"*": ["node_modules/*"]
		},
		"typeRoots": ["@types", "node_modules/@types"]
	},
	"include": ["src/**/*.ts"]
}
