html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        block styles

    body
        .backdrop
        header.main-header
            button#side-menu-toggle Menu  
            nav.main-header__nav
                .main-header__item-list
                    .main-routes
                        li.main-header__item 
                            a(href="/" , class=(path === '/' ? 'active' : '')) Shop
                        li.main-header__item 
                            a(href="/products" , class=(path === '/products' ? 'active' : '')) Products
                        li.main-header__item 
                            a(href="/cart" , class=(path === '/cart' ? 'active' : '')) Cart
                        li.main-header__item 
                            a(href="/orders" , class=(path === '/orders' ? 'active' : '')) Orders
                        li.main-header__item 
                            a(href="/checkout" , class=(path === '/checkout' ? 'active' : '')) Checkout
                        if isLoggedIn
                            li.main-header__item 
                                a(href="/admin/add-product", class=(path === '/admin/add-product' ? 'active' : '')) Add Product
                            li.main-header__item 
                                a(href="/admin/admin-products", class=(path === '/admin/admin-products' ? 'active' : '')) Admin Products
                    .auth-routes
                        li.main-header__item 
                            a(href="/login" , class=(path === '/login' ? 'active' : '')) Login

        nav.mobile-nav
            .mobile-nav__item-list
                li.mobile-nav__item
                    a(class=(path === '/' ? 'active' : '') href="/") Shop
                li.mobile-nav__item
                    a(class=(path === '/products' ? 'active' : '') href="/products") Products
                li.mobile-nav__item
                    a(class=(path === '/cart' ? 'active' : '') href="/cart") Cart 
                li.mobile-nav__item
                    a(class=(path === '/orders' ? 'active' : '') href="/orders") Orders
                if isLoggedIn
                    li.mobile-nav__item
                        a(class=(path === '/admin/add-product' ? 'active' : '') href="/admin/add-product") Add Product
                    li.mobile-nav__item
                        a(class=(path === '/admin/products' ? 'active' : '') href="/admin/products") Admin Products
                li.main-header__item 
                    a(href="/login" , class=(path === '/login' ? 'active' : '')) Login
        block content

        script(src="/js/main.js")