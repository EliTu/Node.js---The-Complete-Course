extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    h2 #{pageSubtitle}
    main
        if products.length > 0
            .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src=`${product.imageUrl ? product.imageUrl :  'https://loremflickr.com/320/240/product' + '?random=' + products.indexOf(product)}`, alt="product image")

                        .card__content
                            h2.product__price $#{product.price}
                            p.product__description #{product.description}

                        .card__actions
                            a(class="link" href=`/products/${product.id}`) Details
                            form(action="/add-to-cart" method="POST")
                                button(class="btn" type="submit") Add to Cart
        else 
            h1 No products