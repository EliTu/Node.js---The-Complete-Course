extends ../layouts/main-layout.pug

block content 
    h2 #{pageSubtitle}
    main
        if productDetails.id
            .center
                h1 #{productDetails.title}
                img(src=`${productDetails.imageUrl}`)
                h3 $#{productDetails.price}
                p #{productDetails.description}
                form(action="/cart" method="POST")
                    button(class='btn' type="submit") Add to cart
