extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    h2 #{pageSubtitle}
    main
        if success
            include ../layouts/user-message.pug

        if hasProducts
            section(class="pagination")
                if hasPreviousPage && currentPage !== 1
                    a(class="pagination_arrow" href=`/products/?page=${previousPage}`) <

                if currentPage !== 1 && previousPage !== 1
                    a(href="/products/?page=1") 1

                if hasPreviousPage && previousPage !== 1
                    span ...

                if hasPreviousPage
                    a(href=`/products/?page=${previousPage}`) #{previousPage}

                a(href=`/products/?page=${currentPage}` class="active") #{currentPage}

                if hasNextPage
                    a(href=`/products/?page=${nextPage}`) #{nextPage}

                if hasNextPage && nextPage !== lastPage
                    span ...
                
                if currentPage !== lastPage && nextPage !== lastPage
                    a(href=`/products/?page=${lastPage}`) #{lastPage}

                if hasNextPage  && currentPage !== lastPage
                    a(class="pagination_arrow" href=`/products/?page=${nextPage}`) >

            .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src=`${product.imageUrl}`, alt="product image")

                        .card__content
                            h2.product__price $#{product.price}
                            p.product__description #{product.description}

                        .card__actions
                            a(class="link" href=`/products/${product._id}`) Details
                            include ../layouts/addToCart.pug
        else 
            h1 No products